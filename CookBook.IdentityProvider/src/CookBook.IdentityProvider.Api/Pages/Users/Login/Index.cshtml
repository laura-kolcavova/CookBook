@page

@using CookBook.IdentityProvider.Api.Pages.Users.Login

@model IndexModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex min-h-screen">
    <div class="hidden lg:block lg:w-1/2">
        <img src='~/images/login_side_panel_image.png' alt="A vibrant dish of food" class="object-cover w-full h-full" />
    </div>


    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Welcome Back</h2>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

                <div class="mb-4">
                    <label asp-for="Input.Email" class="block text-gray-700 text-sm font-bold mb-2">Email Address</label>
                    <input asp-for="Input.Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Input.Password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <input asp-for="Input.Password" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="mb-6">
                    <label class="inline-flex items-center">
                        <input asp-for="Input.RememberLogin" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600">
                        <span class="ml-2 text-gray-700">Remember me</span>
                    </label>
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                        Log In
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>