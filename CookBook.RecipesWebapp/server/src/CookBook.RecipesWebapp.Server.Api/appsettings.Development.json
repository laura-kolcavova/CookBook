{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "SpaClientConfiguration": {
    "StaticFilesRootPath": "../../../client/build",
    "UseDevelopmentProxyServer": true,
    "DevelopmentProxyServerBaseUri": "http://localhost:3015"
  },

  "OpenIddictConfiguration": {
    "IssuerUri": "http://localhost:8020"
  },

  "ReverseProxyConfiguration": {
    "Clusters": {
      "RecipesApi": {
        "Destinations": {
          "main": {
            "Address": "http://localhost:8010"
          }
        }
      },
      "IdentityProviderApi": {
        "Destinations": {
          "main": {
            "Address": "http://localhost:8020"
          }
        }
      }
    }
  }
}
